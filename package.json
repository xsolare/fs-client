{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "loc-track-front",
  "private": true,
  "version": "2.0.0",
  "engines": {
    "node": ">=18.x",
    "npm": "npm install -g pnpm",
    "pnpm": ">=8.x"
  },
  "author": {
    "name": "Ivan Kornilov",
    "email": "ivan.kornilov@nordclan.com",
    "url": "https://t.me/xsolncu"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "npm run lint:ts && npm run lint:style",
    "lint:ts": "eslint \"./**/*.{ts,tsx}\" --fix",
    "lint:style": "stylelint \"./**/*.{css,sass,scss}\" --fix --allow-empty-input",
    "lint:staged": "lint-staged --debug",
    "format": "prettier -w \"./**/*.{ts,tsx,json,scss,md}\"",
    "test": "vitest --run test/",
    "test:watch": "vitest test/",
    "test:c8": "vitest run --coverage test/",
    "test:ui": "vitest --ui --open",
    "postinstall": "husky install .husky"
  },
  "dependencies": {
    "@emotion/react": "11.11.1",
    "@emotion/styled": "11.11.0",
    "@nord-clan/loc-track-ui-kit": "1.1.1",
    "antd": "5.6.3",
    "axios": "1.4.0",
    "classnames": "2.3.2",
    "dayjs": "1.11.8",
    "graphql": "16.7.1",
    "graphql-request": "6.1.0",
    "mobx": "6.9.0",
    "mobx-react-lite": "3.4.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-icons": "4.10.1",
    "react-router-dom": "6.14.0",
    "socket.io-client": "4.7.0",
    "uuid": "9.0.0"
  },
  "devDependencies": {
    "@emotion/eslint-plugin": "11.11.0",
    "@types/node": "20.3.2",
    "@types/react": "18.2.14",
    "@types/react-dom": "18.2.6",
    "@types/uuid": "9.0.2",
    "@typescript-eslint/eslint-plugin": "5.60.1",
    "@typescript-eslint/parser": "5.60.1",
    "@vitejs/plugin-react": "4.0.1",
    "eslint": "8.43.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "happy-dom": "9.20.3",
    "husky": "8.0.3",
    "lint-staged": "13.2.2",
    "prettier": "2.8.8",
    "rollup-plugin-visualizer": "5.9.2",
    "stylelint": "15.9.0",
    "stylelint-config-prettier": "9.0.5",
    "stylelint-config-recommended": "12.0.0",
    "typescript": "5.1.3",
    "unplugin-auto-import": "0.16.4",
    "vite": "4.3.9",
    "vitest": "0.32.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,json,yaml,yml,yaml,htm,html,md}": "eslint --fix",
    "*.{css,sass,scss,vue,htm,html}": "stylelint --fix",
    "*": "prettier -w -u"
  },
  "packageManager": "pnpm@8.1.0"
}
